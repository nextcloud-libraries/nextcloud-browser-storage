{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["ESNext", "DOM"],

        "esModuleInterop": true,
        "rewriteRelativeImportExtensions": true,

        "outDir": "./dist",
        "declaration": true,

        "erasableSyntaxOnly": true,

        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
    }
}

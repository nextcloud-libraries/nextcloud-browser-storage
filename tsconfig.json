{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "lib": ["DOM", "ESNext"],

        "esModuleInterop": true,
        "rewriteRelativeImportExtensions": true,

        "outDir": "./dist",
        "declaration": true,

        "erasableSyntaxOnly": true,

        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
    }
}
